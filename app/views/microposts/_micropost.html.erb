<li class="post-li" id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.display_image if micropost.image.attached? %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user?(micropost.user) %>
            <%= link_to micropost, method: :delete, class: "text-danger " ,data: { confirm: "You sure?" }  do%>
                <i class="bi bi-trash float-r mr-05 "></i>
            <% end %>
        <% end %>
        <% unless current_user?(micropost.user) %>
                <%= render partial: 'microposts/micropost_bookmark_content' , locals: {micropost: micropost} %>
        <% end %>
    </span>
</li>
