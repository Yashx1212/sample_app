<% provide(:title, 'Home') %>


<% if logged_in? %>

    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
            </section>
            <section class="stats">
                <%= render 'shared/stats' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3>WhatsUp!</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>

<% else %>

    <div class="center jumbotron home">
        <%= image_tag("home_background.png", alt: "logo" , class:"homepage-background") %>
        <span class="absolute-center-top">
        <h1>WeShare</h1>
        <h2>
           We beleive in sharing experiences without being judged.
        </h2>
        </span>
        <span class="absolute-center-bottom">
        <%= link_to "Sign up now!", signup_path , class: "btn btn-md btn-success" %>
        </span>
    </div>

<% end %>